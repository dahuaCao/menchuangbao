/* pages/gouwu/gouwu.wxss */
.cartPage{
  height: 100%;
  display:flex;
  flex-direction: column;
}
.empt-cart{
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #ccc;
}
.list {
  flex: 1;
  height: 0;
}

.hd {
  height: 80rpx;
  padding: 0 30rpx;
  line-height: 80rpx;
  color: #fe0000;
}

.item {
  height: 336rpx;
  box-shadow: 0rpx 0rpx 10rpx 0rpx rgba(0, 0, 0, 0.18);
  margin-bottom: 28rpx;
}

.content {
  flex: 1;
  padding-top: 24rpx;
  padding-right: 30rpx;
}

.con-hd {
  display: flex;
  height: 48rpx;
  line-height: 48rpx;
  justify-content: space-between;
  margin-bottom: 18rpx;
}

.con-hd .lf {
  margin-left: 4rpx;
  width: 480rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.con-hd .rf {
  width: 104rpx;
  background: #f00;
  height: 100%;
  border-radius: 3px;
  text-align: center;
  color: #fff;
}

.con-bd {
  display: flex;
}

.con-bd .lf {
  width: 190rpx;
  height: 190rpx;
  background: #ccc;
  margin-right: 24rpx;
   
}
.img-border{
  box-shadow: 0 0 4rpx 2rpx  #ccc;
}
.con-bd .rf {
  max-width: 300rpx;
  /* margin-right: 142rpx; */
}

.con-bd .r-item {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
  width: 320rpx;
}

.price {
  margin-top: 20rpx;
  color: #f00;
  font-weight: 700;
}

label.checkbox {
  display: flex;
}

checkbox .wx-checkbox-input {
  width: 26rpx;
  height: 26rpx;
  border-radius: 50%;
  margin: 38rpx 18rpx 0 46rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: 2rpx solid #da2728;
  /* background-color: #da2728; */
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  line-height: 22rpx;
  text-align: center;
  font-size: 22rpx;
  color: transparent;
  background: #da2728;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.checkbox {
  display: flex;
}

.bottom {
  height: 130rpx;
  width: 100%;
  background: #F8F5F5;
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow:0px 9px 16px 1px rgba(35,24,21,0.14);
}

.checkAll {
  line-height: 80rpx;
}

.checkAll .wx-checkbox-input {
  margin: 0 20rpx 0 60rpx;
}
.subBtn{
  height: 58rpx;
  width: 170rpx;
  color: #fff;
  background: #FF0000;
  margin-right: 30rpx;
  border-radius:3rpx;
  text-align: center;
  line-height: 58rpx;
}