/* pages/shopCart/applyOrders/applyOrders.wxss */

.address{
  padding: 30rpx 60rpx;
  display: flex;
}
.address .icon{
  margin-right: 10rpx;
}
.address .info{
  flex: 1;
}
.info-item{
  height: 48rpx;
  line-height: 48rpx;
}
.info-item.info-ad{
  color: #E63535;
}
.info-item.info-a{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.goods-list{
  padding: 60rpx
}
.goods-list .goods-item{
  display: flex;
  margin-bottom: 30rpx;
}
.goods-item .item-l{
  width: 190rpx;
  height: 190rpx;
  background-color: #ccc;
  margin-right: 20rpx;
}
.goods-item .item-r{
  flex: 1;
  min-width:0
}
.goods-item .des{
   width: 100%;
   overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
}
.submit-btn{
  height: 200rpx;
  width: 100%;
  /* background: #ccc; */
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.submit-btn .btn{
  height: 68rpx;
  width: 594rpx;
  border-radius: 34rpx;
  background-color:#2574EB;
  color:#fff;
  font-weight: 600;
  text-align: center;
  line-height: 68rpx; 
}
.btn.btn1{
  opacity: 0.7;
}