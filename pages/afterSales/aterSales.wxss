.pro{
  padding: 22rpx 0 28rpx 28rpx;
  display: flex;
  box-shadow:0px 4px 6px 0px rgba(0, 0, 0, 0.1);
}
.pro .lf{
  width: 190rpx;
  height: 190rpx;
  margin-right: 26rpx;
}
.pro .lf image{
  width: 100%;
  height: 100%;
}
.item{
  font-size: 28rpx;
  margin-bottom: 24rpx;
}
.info{
  padding: 0 28rpx;
  font-size: 28rpx;
}
.info .title{
  margin: 32rpx 0 48rpx 0;
}
.bd .item{
  margin-bottom: 24rpx;
}

.uploader-img{
  padding: 0 30rpx;
}
.uploader-img .title{
  display: flex;
  justify-content: space-between;
  margin: 24rpx 5rpx 24rpx 0; 
}
.uploader-video{
  padding: 0 30rpx;
}
.uploader-video .title{
  margin-bottom: 30rpx;
}
.text-area{
  padding: 0 30rpx;
}
.text-area .title{
  margin-bottom: 18rpx;
}
textarea{
  height: 90rpx;
  width: 100%;
  border:2rpx solid #A9A9A9;
  padding-top: 6rpx;
  text-indent: 16rpx;
}
.btn{
  height: 68rpx;
  line-height: 68rpx;
  margin: 50rpx 80rpx;
  border-radius:34rpx;
  background: #2574EB;
  color: #fff;
  text-align: center;
}