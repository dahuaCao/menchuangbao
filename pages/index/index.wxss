/**index.wxss**/

.hd-search{
  height: 124rpx;
  background:linear-gradient(9deg,rgba(54,203,246,1),rgba(85,96,242,1));
  display: flex;
  align-items: center;
}
.location{
  color:#fff;
  font-size: 28rpx;
  margin-left: 30rpx;
  width: 150rpx;
   overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
 .search-box{ 
  width: 510rpx;
  height: 56rpx;
  line-height: 56rpx;
  /* border:2rpx solid rgba(189,189,189,1); */
  border-radius:28rpx;
  margin-left: 20rpx;
  padding: 0 60rpx;
  box-sizing: border-box;
  position: relative;
  background: #fff;
  display: flex;
  align-items: center;
  color: #ccc;
}
.search-box .search-icon{
  position: absolute;
  left: 16rpx;
  top:14rpx;
}

.my-swiper{
   height: 358rpx;
   width: 100%;
   background-color: red;
}
.nav{
  height: 178rpx;
  background-color: #fff;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.nav image{
  width: 336rpx;
  height: 145rpx;
}

.sales-process{
  height: 174rpx;
  margin: 10rpx 0;
  background: #fff;
}
.sales-process .title{
  font-size: 28rpx;
  font-weight: 400;
  line-height: 25rpx;
  padding-left: 30rpx;
  display: inline-flex;
}
.sales-process .content{
  display: flex;
  height: 130rpx;
  width: 100%;
  /* justify-content:space-around; */
}
.sales-process .content .item{
  height: 130rpx;
  font-size: 22rpx;
  display:flex;
  flex: 1;
  align-items:center;
  flex-direction: column;
}
.item-img{
  /* background: red; */
  width:66rpx;
  height:66rpx;
  border-radius: 50%;
  margin:18rpx 0 10rpx;
}
.staff{
  padding: 18rpx 30rpx;
  display: flex;
  justify-content: space-between;
}
.staff-item{
 flex: 1;
 height: 210rpx;
 border-radius: 10rpx;
}
.staff-item image{
  width: 100%;
  height: 100%;
}
.tab{
  display: flex;
  height: 100rpx;
  align-items: center;
}
.tab-item{
  flex: 1;
  text-align: center;
  font-size: 24rpx;
  color: #4A4A4A;
  display: flex;
  align-items: center;
  justify-content: center;
}
.ad{
  height: 284rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
}
.ad-item{
  width: 336rpx;
  height: 284rpx;
}
.ad-item image{
  width: 100%;
  height: 100%;
}
.link{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}