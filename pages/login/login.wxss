/* pages/login/login.wxss */
.header {
    margin: 90rpx 30rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    
    height: 300rpx;
    line-height: 450rpx;
    display: flex;
    justify-content: center;
}
 
.header .img {
    width: 200rpx;
    height: 200rpx;
    background: blueviolet;
    border-radius: 14rpx;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}