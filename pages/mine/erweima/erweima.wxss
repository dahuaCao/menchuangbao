/* pages/erweima/erweima.wxss */

.text{
  height: 120rpx;
  padding-top: 82rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 46rpx;
}
.canvas{
  width: 180px;
  height: 180px;
  background:#fff;
  margin: 0 auto;
}
.btn{
  height: 100rpx;
  width:462rpx;
  margin: 30rpx auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 50rpx;
  text-align: center;
}
.btn .btn1{
  width: 188rpx;
  height: 50rpx;
  border: 1px solid #818181;
  border-radius: 4rpx;
}
.btn .btn2{
  width: 188rpx;
  height: 50rpx;
  background: #2574EB;
  border-radius: 4rpx;
  color:#fff;
}
.share-pop-box{
  width: 100%;
  height: 400rpx;
  position: fixed;
  background: rgba(0, 0, 0, 0.5);
  z-index: 8;
  bottom: 0;
}
.share-pop-box .share-pop{
  height: 100%;
  width: 100%;
  background:#fff;
  box-shadow:0px 0px 20rpx 0px rgba(0, 0, 0, 0.18);
}
.share-pop .close {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  right: 32rpx;
  top: 32rpx;
  line-height: 48rpx;
  text-align: center;
}
.share-pop .share-info{
  height: 100%;
  width: 100%;
  /* background:red */
  padding: 100rpx 130rpx 0 130rpx;
  display: flex;
  justify-content: space-between;
}
.sharebtn,.savesharebtn{
  width: 200rpx;
   height: 180rpx;
  background: none !important;
  border: none;
  font-size: 28rpx;
 
}
.share-info .sharebtn_image{
  height: 74rpx;
  width: 74rpx;
}