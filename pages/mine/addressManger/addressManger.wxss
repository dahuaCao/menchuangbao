/* pages/addressManger/addressManger.wxss */

.address_no{
  width: 100%;
  height: 500rpx;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ccc;
}
.address-list{
  padding:0 30rpx;
}
.address-list .item {
  min-height: 174rpx;
  /* align-items: center; */
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #818181;
  padding: 40rpx 0;
  font-size: 30rpx;
}
.item-content{
  display: flex;
}
.address-list .l {
  width: 130rpx;
  /* height: 80rpx; */
  overflow: hidden;
}
.address-list .name {
  color: #333;
  margin-bottom: 26rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.address-list .default {
  width: 100rpx;
  height: 34rpx;
  line-height: 27rpx;
  text-align: center;
  font-size: 20rpx;
  color: #FF7800;
  border: 1rpx solid #FF7800;
  visibility: visible;
}
.address-list .c {
  flex: 1;
  height: auto;
  overflow: hidden;
}
.address-list .mobile {
  /* height: 29rpx;
  font-size: 29rpx;
  line-height: 29rpx; */
  overflow: hidden;
  color: #333;
  margin-bottom: 24rpx;
}
.address-list .address {
  font-size: 28rpx;
  line-height: 37rpx;
  overflow: hidden;
  color: #333;
}
.address-list .eidtor{
  width: 100rpx;
  padding: 14rpx 0;
 
}
.address-list .r {
  
  height: 100%;
  overflow: hidden;
  margin-right:12rpx;
  border-left: 1px solid #CECECE;
  display: flex;
  align-items: center;
  justify-content: center;
  color:#CECECE;
}
.bottom{
  height: 180rpx;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 40rpx 30rpx 0;
}
.btn {
  height: 76rpx;
  line-height: 76rpx;
  text-align: center;
  color: #fff;
  background: #2574eb;
  border-radius: 38px;
}
