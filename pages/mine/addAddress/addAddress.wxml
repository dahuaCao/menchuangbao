      <view class='item'>
        <view class='lf textArea'>门牌号　</view>
        <view class='rf text'>
          <textarea auto-height placeholder="详细地址 例:16号楼5层501室" bindinput="bindinputAddress"  value="{{address.doorplate}}"/>
        </view>
      </view>
      <view bindtap='bindIsDefault'>
        <radio-group class="form-default">
          <label class="radio">
            <radio value="" checked="{{isChecked}}" color='#f00' />设为默认地址
          </label>
        </radio-group>
      </view>
    </view>
    <view class="btns">
      <button class="cannel" bindtap="cancelAddress">取消</button>
      <button class="save" bindtap="saveAddress">保存</button>
    </view>
