  height: 100%;
   
}

.uploader-input {
  float: left;
  margin: 0 18rpx 18rpx 0;
  border: 2rpx dashed #666;
  display: flex;
  flex-direction: column;
  width: 148rpx;
  height: 130rpx;
  justify-content: center;
  align-items: center;
  color: #A9A9A9;
  font-size: 24rpx;
}

.btn {
  height: 68rpx;
