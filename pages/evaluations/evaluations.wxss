}

.title {
  text-align: center;
  margin-bottom: 44rpx;
}

.rater-content {
  padding-left: 116rpx;
}

.rater-item {
  display: flex;
  align-items: center;
  margin-bottom: 38rpx;
}

.rater-item .lf {
  margin-right: 26rpx;
}

.area-content {
  padding: 0 38rpx;
}

.area {
  border: 2rpx solid #8e8e8e;
