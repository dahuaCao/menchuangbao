  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content {
  padding: 20rpx 60rpx 0;
}

.content .item {
  padding: 16rpx 0;
  display: flex;
  align-items: center;
}

.lf {
  margin-right: 40rpx;
  height: 58rpx;
}

.rf {
  flex: 1;
  /* height: 58rpx; */
}

.custom {
  display: flex;
}

.cs-item {
  flex: 1;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  border: 2rpx solid rgba(37, 116, 235, 1);
