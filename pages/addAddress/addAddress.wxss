/* pages/addAddress/addAddress.wxss */

.contain {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.content {
  padding: 20rpx 60rpx 0;
}

.content .item {
  min-height: 90rpx;
  padding: 16rpx 0;
  display: flex;
  align-items: center;
}

.lf {
  margin-right: 40rpx;
}

.rf {
  flex: 1;
}

.custom {
  display: flex;
}

.cs-item {
  flex: 1;
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  border: 2rpx solid rgba(37, 116, 235, 1);
  border-radius: 5rpx;
  color: #ccc;
}

.rf input {
  height: 58rpx;
  border: 2rpx solid rgba(37, 116, 235, 1);
  border-radius: 5rpx;
  padding-left: 15rpx;
}

.btn {
  margin: 0 80rpx 130rpx 80rpx;
  height: 68rpx;
  background: rgba(37, 116, 235, 1);
  border-radius: 34px;
  text-align: center;
  line-height: 68rpx;
  color: #fff;
}
