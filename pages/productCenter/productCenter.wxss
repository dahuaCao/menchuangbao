/* pages/productCenter/productCenter.wxss */
page{
  background: #fff;
  height: 100%;
}

.container{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.container .search-bar{
  padding-top: 27rpx;
   display: flex;
  
}
.container .search-bar .search-box{ 
  width: 594rpx;
  height: 61rpx;
  line-height: 61rpx;
  border:2rpx solid rgba(189,189,189,1);
  border-radius:31rpx;
  margin-left: 47rpx;
  padding: 0 68rpx;
  box-sizing: border-box;
  position: relative;
}
.container .search-bar .search-box .search-bar_input{
  height: 61rpx;
}
.search-bar .search-box .icon-search_in-box{
  position: absolute;
  left: 0;
  top:12rpx;
  padding: 0 16rpx;
}
.search-bar .search-box .icon-clear{
  position: absolute;
  right: 0;
  top:6rpx;
  padding: 0 16rpx;
}
.search-bar .search-bar-btn{
  margin: 10rpx;
  display: inline-block;
}
.container .hotSearch{
  display: flex;
  
   margin: 15rpx 0;
}
.container .hotSearch .title{
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.container .hotSearch .search-item{
  flex: 1;
  padding-left: 15rpx;
  display: flex;
  justify-content: flex-start; 
}
.container .hotSearch .search-item .item{
  margin-right: 15rpx;
  line-height: 80rpx;
  padding: 7rpx 15rpx;
  background:rgba(189,189,189,1);
  border:2rpx solid rgba(189,189,189,1);
  border-radius:3rpx;
  color: #fff;
}
.container .productCenter{
  flex: 1;
  display: flex;
}
.container .productCenter .nav-left{
  height: 100%;
  width: 180rpx;
  background: #F4F4F4;
  text-align: center;  
}
.productCenter .nav-left .nav_left_items{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #ccc;
}
.productCenter .nav-left .nav_left_items.active{
  background-color: #fff;
  border-left: 6rpx solid red;
  border-bottom: none;
  color:#2574EB;
}
.container .productCenter .nav-right{
  flex: 1;
  padding: 0 30rpx  0 15rpx;
}
.productCenter .nav-right .nav-right-content{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.productCenter .nav-right .nav-right-content .nav-right-item{
  width: 48%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 30rpx;
}
.nav-right-content .nav-right-item .image{
  width: 250rpx;
  height: 235rpx;
}