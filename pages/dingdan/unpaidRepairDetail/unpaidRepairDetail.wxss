/* pages/unpaidFixDetail/unpaidFixDetail.wxss */

.masterInfo {
  padding: 20rpx 30rpx 38rpx;
}

.master-hd {
  padding: 24rpx 0;
  border-bottom: 2rpx solid #858ea2;
}

.m-bd-item {
  margin-top: 24rpx;
}

.orderInfo {
  padding: 14rpx 30rpx 14rpx;
}

.order-hd {
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #858ea2;
}

.o-bd-item, .cost-bd-item {
  margin-top: 24rpx;
  display: flex;
  justify-content: space-between;
}

.pics {
  margin-top: 24rpx;
}

.pics-content {
  margin-top: 4rpx;
  display: flex;
  flex-wrap: wrap;
}

.pic-item {
  width: 158rpx;
  height: 110rpx;
  /* float: left; */
  margin: 20rpx 14rpx 0 0;
}

.pic-item image {
  width: 100%;
  height: 100%;
}

.cost-detail {
  padding: 0 30rpx 70rpx;
}

.cost-hd {
  height: 70rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #858ea2;
}

.payBtn {
  height: 68rpx;
  margin: 150rpx 48rpx 0;
  background: #2574eb;
  border-radius: 34px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}
