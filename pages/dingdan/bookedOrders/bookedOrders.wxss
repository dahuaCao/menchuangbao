/* pages/bookedOrders/bookedOrders.wxss */
page{
  background: #fff;
}
.order-content{
  padding-bottom: 40rpx;
}
.item{
  height: auto;
  box-shadow:0px 0rpx 10rpx 0px rgba(0, 0, 0, 0.2);
  padding: 0 30rpx 20rpx;
  margin-bottom: 18rpx;
}
.title{
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #858EA2;
}
.tl-rf{
  color: #FE0707;
}
.hd-content{
  padding: 26rpx 0 0 0;
}
.hd-item{
  display: flex;
  height: 190rpx;
  margin-bottom: 26rpx;
  position: relative;
}
.hd-lf{
  height: 190rpx;
  width: 190rpx;
  margin-right: 24rpx;
  box-shadow: 0 0  8rpx 2rpx #ccc;
}
.hd-lf image{
  width: 100%;
  height: 100%;
}
.hd-rf{
  flex: 1;
  min-width: 0;
}
.hd-rf .time{
  margin-top: 24rpx;
}
.btn{
  width: 174rpx;
  height: 58rpx;
  border:1rpx solid #9A9A9A;
  border-radius:8rpx;
  position: absolute;
  right: 0;
  bottom: 0;
  text-align: center;
  line-height: 58rpx;
}
.btn-bg{
  background: rgb(211, 148, 148);
  color:#fff;
}
.fd{
  margin-bottom: 20rpx;
}
.btn-content{
  height: 70rpx;
  position: relative;
}
.empt-cart{
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #ccc;
}