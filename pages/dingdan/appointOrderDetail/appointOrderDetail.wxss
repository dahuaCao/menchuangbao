/* pages/appointOrderDetail/appointOrderDetail.wxss */

.masterInfo{
  padding: 20rpx 30rpx 38rpx;
}
.master-hd{
  padding: 24rpx 0;
  border-bottom: 2rpx solid #858EA2;
}
.master-bd .info-none{
  height: 100rpx;
  width: 100%;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  color:rgb(134, 124, 145);
}
.m-bd-item{
  margin-top: 24rpx;
}

.orderInfo{
  padding: 14rpx 30rpx 0;
}
.order-hd{
  height: 80rpx;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #858EA2;
}
.o-bd-item{
  margin-top: 24rpx;
}
.product-content{
  margin-top: 24rpx;
}
.product-content .p-item{
  display: flex;
  width: 100%;
  margin-bottom: 24rpx;
}
.p-item .l-img{
  height: 190rpx;
  width: 190rpx;
  margin-right: 20rpx;
  box-shadow: 0 0 8rpx 2rpx #ccc;
}
.p-item .r-info{
  flex: 1;
  width: 0;
}
.r-info .info-item{
  margin-bottom: 18rpx;
}
.r-info .info-item.title{
  font-weight: 700;
}