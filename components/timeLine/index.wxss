/* components/timeLine/index.wxss */
@import '/styles/iconfont.wxss';
/*外部容器*/
.listview-container {
    margin: 10rpx 10rpx;
    position: relative;
    overflow: hidden;
    transition: max-height 0.5s linear;
}
/*行样式*/
.playlog-item {
    display: flex;
    min-height: 60rpx;
}
/*时间轴*/
.playlog-item .dotline {
    width: 40rpx;
    position: relative;
    margin-right: 10rpx;
    text-align: center;   
    /* border: 2rpx solid transparent; */
}

/*竖线*/
.playlog-item .dotline .line {
    width: 2rpx;
    height: 100%;
   background: #999;
   left: 19rpx;
   top: 0;
   position: absolute;
   
}
/*圆点*/
.playlog-item .dotline .dot {
    position: relative;
    /* left: 1rpx; */
    top:-2rpx;
    font-size: 34rpx;
    font-weight: 700;
}
.red{
  color:red;
}
.btn{
  /* background: red; */
  width:240rpx;
  padding: 5rpx;
  text-align: center;
  position: absolute;
  top:0;
  left: 50%;
  transform: translateX(-50%);
}