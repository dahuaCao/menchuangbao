/* components/dialog/index.wxss */

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  background: #000;
  opacity: 0;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.drawer_box {
  position: absolute;
  z-index: 1001;
  width: 622rpx;
  height: 630rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 20rpx 0px rgba(0, 0, 0, 0.27);
  color: #000;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  margin:auto;
}
.row{
  position: relative;
  height: 80rpx;
  border-bottom: 2rpx solid #333;
  display: flex;
  justify-content: center;
  align-items: center;
}
.clear{
  position: absolute;
  top:6rpx;
  right: 6rpx;
}
.drawer_content{
  padding: 50rpx;
  
}
.content_info{
  text-indent: 40rpx;
  line-height: 48rpx;
}
.code{
  width: 202rpx;
  height: 202rpx;
  margin: 10rpx 0;
}
.content-img{
  display: flex;
  flex-direction: column;
  align-items: center;
}