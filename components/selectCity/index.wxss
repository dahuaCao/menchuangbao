/* components/selectCity/index.wxss */

.current-location{
     height:80rpx;
     width:100%;
     background:pink;
}
.cityList {
     width: 100%;
     height: 100%;
     display: flex;
     flex-direction: column;
}

.citySlide {
     display: flex;
     flex-direction: column;
     width: 60rpx;
     height: calc(100% - 80px);
     position: absolute;
     top: 120rpx;
     right: 4rpx;
     align-items: center;
     justify-content: center;
     background-color: #ccc;
     opacity: 0.6;
}
.citySlideItem {
     width: 100%;
     flex: 1;
     text-align: center;
     font-size: 24rpx;
}
.citySlideItem.active{
     color:red;
}