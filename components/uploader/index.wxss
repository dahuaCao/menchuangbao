/* components/uploader/index.wxss */
@import '/styles/iconfont.wxss';
.uploader-files {
  overflow: hidden;
}

.uploader-file {
  float: left;
 margin: 0 18rpx 18rpx 0;
  /* border: 2rpx solid #666; */
  width: 148rpx;
  height: 130rpx;
  box-shadow:2rpx 2rpx 2rpx #888888;
  position: relative;
}
.delete-btn{
  position: absolute;
  top:-2rpx;
  right: 0;
}
.uploader-img {
  /* width: 148rpx;
  height: 130rpx; */
  width: 100%;
  height: 100%;
   
}

.uploader-input {
  float: left;
  margin: 0 18rpx 18rpx 0;
  border: 2rpx dashed #666;
  display: flex;
  flex-direction: column;
  width: 148rpx;
  height: 130rpx;
  justify-content: center;
  align-items: center;
  color: #A9A9A9;
  font-size: 24rpx;
}